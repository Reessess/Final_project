<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #ADD8E6;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jrees.finalrequirements_infoman.controllers.HomeController">
    <!-- Title -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to the SEASIDE COLLECTIVE" />

    <!-- Seaside Products Section -->
    <VBox alignment="CENTER" spacing="10" style="-fx-border-width: 2px; -fx-border-color: gray; -fx-padding: 10;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Seaside Products" />

        <TableView fx:id="productTable" prefWidth="600">
            <columns>
                <TableColumn fx:id="productIdColumn" prefWidth="100.0" text="Product ID" />
                <TableColumn fx:id="productNameColumn" prefWidth="322.0" text="Product " />
                <TableColumn fx:id="productPriceColumn" prefWidth="114.0" text="Price" />
                <TableColumn fx:id="productQuantityColumn" prefWidth="63.0" text="Stock" />
            </columns>
        </TableView>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="addProductButton" text="Add Product" />
            <Button fx:id="removeProductButton" text="Remove Product" />
        </HBox>
    </VBox>

    <!-- Search Result Section -->
    <VBox alignment="CENTER" spacing="10" style="-fx-border-width: 2px; -fx-border-color: gray; -fx-padding: 10;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Search Result" />
        <HBox spacing="10">
            <Label text="Product Name:" />
            <TextField fx:id="resultProductName" editable="true" />
            <Button fx:id="searchButton" text="Search" onAction="#handleSearch" />
        </HBox>
        <HBox spacing="10">
            <Label text="Price:" />
            <TextField fx:id="resultProductPrice" editable="false" />
            <Label text="Stock:" />
            <TextField fx:id="resultProductQuantity" editable="false" />
        </HBox>
        <HBox spacing="10">
            <Label text="Total Price:" />
            <TextField fx:id="resultTotalPrice" editable="false" />
        </HBox>
    </VBox>
</VBox>
